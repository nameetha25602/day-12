#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
 
   int n;
    scanf("%d", &n);

    int size = 2 * n - 1;

    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            if (i < n) {
                // Top half (including middle line)
                if (j == i || j == size - i - 1) {
                    printf("*");
                } else {
                    printf(" ");
                }
            } else {
                // Bottom half
                int mirrored_i = size - i - 1;
                if (j == mirrored_i || j == size - mirrored_i - 1) {
                    printf("*");
                } else {
                    printf(" ");
                }
            }
        }
        printf("\n");
    }

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
